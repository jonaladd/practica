<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}">


   <ImageButton
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:layout_marginTop="35dp"
       android:id="@+id/entrega"
       android:background="@drawable/entrega"
       android:layout_below="@+id/name"
       android:layout_toLeftOf="@+id/name"
       android:layout_toStartOf="@+id/name"
       android:layout_marginRight="11dp"
       android:layout_marginEnd="11dp" />
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/retiro"
        android:background="@drawable/moto"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignTop="@+id/entrega"
        android:layout_toRightOf="@+id/name"
        android:layout_toEndOf="@+id/name" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/estadisticas"
        android:background="@drawable/estadistica"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/consulta"
        android:background="@drawable/consulta"
        android:layout_above="@+id/btnLogout"
        android:layout_alignLeft="@+id/entrega"
        android:layout_alignStart="@+id/entrega"
        android:layout_marginBottom="50dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/nuevo"
        android:background="@drawable/nuevo"
        android:layout_alignTop="@+id/consulta"
        android:layout_alignLeft="@+id/retiro"
        android:layout_alignStart="@+id/retiro" />
        <TextView
            android:id="@+id/name"
            android:layout_width="106dp"
            android:layout_height="30dp"
            android:padding="10dp"
            android:textColor="@color/lbl_name"
            android:textSize="24dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/usuario"
            android:layout_alignLeft="@+id/btnLogout"
            android:layout_alignStart="@+id/btnLogout" />

    <TextView
        android:id="@+id/usuario"
        android:layout_width="106dp"
        android:layout_height="30dp"
        android:textColor="#fcf9f9"
        android:textSize="13dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name" />

    <Button
            android:id="@+id/btnLogout"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:background="@drawable/degradado"
            android:text="@string/btn_logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
        android:layout_marginBottom="21dp"
        android:layout_marginLeft="129dp"
        android:layout_marginStart="129dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>